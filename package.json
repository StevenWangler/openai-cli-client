{
  "name": "openai-cli-client",
  "version": "1.0.0",
  "description": "The most beautiful CLI chat client using OpenAI API with MCP server support",
  "main": "dist/index.js",
  "type": "module",
  "bin": {
    "ai-chat": "dist/index.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsx src/index.ts",
    "start": "node dist/index.js",
    "watch": "tsx watch src/index.ts",
    "popup": "./scripts/launch-popup.sh",
    "create-app": "./scripts/create-app.sh",
    "desktop-shortcut": "./scripts/create-desktop-shortcut.sh",
    "install-global": "npm run build && npm link"
  },
  "keywords": [
    "openai",
    "mcp",
    "cli",
    "ai",
    "chat",
    "beautiful",
    "modern",
    "terminal"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.0",
    "@types/marked": "^6.0.0",
    "chalk": "^5.3.0",
    "cli-boxes": "^3.0.0",
    "commander": "^12.1.0",
    "dotenv": "^16.5.0",
    "gradient-string": "^2.0.2",
    "inquirer": "^12.0.0",
    "marked": "^15.0.12",
    "openai": "^4.70.1",
    "ora": "^8.1.1",
    "terminal-link": "^3.0.0"
  },
  "devDependencies": {
    "@types/inquirer": "^9.0.7",
    "@types/node": "^22.10.2",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
